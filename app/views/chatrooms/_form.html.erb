<div class="row">
<div class="col-sm-5 ">
<%= simple_form_for(chatroom) do |f| %>

  <div class="form-group">
    <%= f.input :name, label: '會議名稱', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label "會議主旨" %><br />
    <%= f.text_area :outline, class: 'form-control', rows: "4"  %>
  </div>


  <div class="form-group">
    <%= f.input :start_at, label: '開始時間', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.input :end_at, label: '結束時間', class: 'form-control'  %>
  </div>

  <div class="actions">
    <%= f.submit "開啟會議", class: 'btn btn-lg  btn-primary' %>
  </div>

<% end %>

</div>
</div>
