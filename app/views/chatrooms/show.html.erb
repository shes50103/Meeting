<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<h4>Chatroom members </h4>
<ul>
    <% @chatroom.chatroom_users.each do |request| %>
    <li>
      <%= request.user %>
    </li>
  <% end %>
</ul>

<div data-behavior='messages'>
  <% @messages.each do |message| %>
  <div> <strong> <%= message.user %>: </strong><%= message.body %></div>
  <% end %>
</div>

<%= form_for [@chatroom, Message.new] do |f| %>
  <%= f.text_area :body, rows: 1, class: "form-control", autofocus: true %>
<% end %>


