<p id="notice"><%= notice %></p>

<h1>Chatrooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= link_to 'New Chatroom', new_chatroom_path %>

    <% @chatrooms.each do |chatroom| %>
      <tr>
        <td><%= chatroom.name %></td>
        <td><%= link_to "Join", chatroom_chatroom_users_path(chatroom), method: :post , class:'btn btn-success btn-sm'%></td>
        <td><%= link_to 'Show', chatroom, class:'btn btn-info btn-sm' %></td>
        <td><%= link_to "Leave", chatroom_chatroom_users_path(chatroom), method: :delete, class:'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_chatroom_path(chatroom), class:'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

