  <div class="phone">
    <div class="top">
      <div class="camera"></div>
    </div>
    <div class="screen">
      <div class="pages">
        <div class="page page1">
          <div class=" chatroom" >
          <p>a</p>
            <div class="chatroom_message_desplay" data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
