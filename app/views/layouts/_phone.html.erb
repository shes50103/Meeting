              <% end %>
            </div>
              <div class="chatroom_message_type" >
              <%= form_for [@chatroom, Message.new], remote: true do |f| %>
                <%= f.text_area :body, rows: 1, class: "form-control", autofocus: true %>
              <% end %>
              </div>
          </div>
        </div>
        <div class="page page2"> <p>a</p> </div>
        <div class="page page3">
          <p>a</p>
        </div>
      </div>
    </div>
